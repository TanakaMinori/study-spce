<!DOCTYPE html>
<html>
  <head>
    <title>StudySpace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link href="https://fonts.googleapis.com/css?family=Quicksand&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Pacifico&display=swap" rel="stylesheet">
    <%= include_gon %>
  </head>

  <body>
    <header>
      <div class="menu-logo">Study Space</div>
      <div class="toggle"><i class="fas fa-bars fa-2x"></i></div>
        <nav>
          <div class="home">Home</div>
              <% if user_signed_in? %>
                <%= link_to 'マイページ', user_path(current_user.id), class:"bar-btn btn",data: {"turbolinks" => false} %>
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"bar-btn btn",data: {"turbolinks" => false} %>
              <% else %>
                <%= link_to 'ログイン', new_user_session_path, class:"bar-btn btn",data: {"turbolinks" => false} %>
                <%= link_to 'ユーザー登録', new_user_registration_path, class:"bar-btn btn",data: {"turbolinks" => false} %>
              <% end %>
          <div class="twitter">
            <a id="tweet-icon-link" href="http://twitter.com/share?url=[シェアするURL]&text=Study Space~勉強スペースレビューアプリ~&hashtags=studyspace" target="_blank"><i class="twitter-icon fab fa-twitter fa-2x"></i></a>
          </div>
        </nav>
    </header>
    <%= yield %>
  </body>
</html>
