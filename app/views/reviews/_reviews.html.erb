
  <span>カテゴリー：<%= reviews.category %></span>
  <div class="wrap">
    おすすめ度：
    <% if reviews.recommend_rate <= 1 %>
      <span class="rate rate0"></span>
    <% elsif reviews.recommend_rate <= 2 %>
      <span class="rate rate1"></span>
    <% elsif reviews.recommend_rate <= 3 %>
      <span class="rate rate1-5"></span>
    <% elsif reviews.recommend_rate <= 4 %>
      <span class="rate rate2"></span>
    <% elsif reviews.recommend_rate <= 5 %>
      <span class="rate rate2-5"></span>
    <% elsif reviews.recommend_rate <= 6 %>
      <span class="rate rate3"></span>
    <% elsif reviews.recommend_rate <= 7 %>
      <span class="rate rate3-5"></span>
    <% elsif reviews.recommend_rate <= 8 %>
      <span class="rate rate4"></span>
    <% elsif reviews.recommend_rate <= 9 %>
      <span class="rate rate4-5"></span>
    <% elsif reviews.recommend_rate <= 10 %>
      <span class="rate rate5"></span>
    <% end %>
  </div>
  <div class="wrap">
    wifi速度：
    <% if reviews.wifi_rate <= 1 %>
      <span class="rate rate0"></span>
    <% elsif reviews.wifi_rate <= 2 %>
      <span class="rate rate1"></span>
    <% elsif reviews.wifi_rate <= 3 %>
      <span class="rate rate1-5"></span>
    <% elsif reviews.wifi_rate <= 4 %>
      <span class="rate rate2"></span>
    <% elsif reviews.wifi_rate <= 5 %>
      <span class="rate rate2-5"></span>
    <% elsif reviews.wifi_rate <= 6 %>
      <span class="rate rate3"></span>
    <% elsif reviews.wifi_rate <= 7 %>
      <span class="rate rate3-5"></span>
    <% elsif reviews.wifi_rate <= 8 %>
      <span class="rate rate4"></span>
    <% elsif reviews.wifi_rate <= 9 %>
      <span class="rate rate4-5"></span>
    <% elsif reviews.wifi_rate <= 10 %>
      <span class="rate rate5"></span>
    <% end %>
    
  </div>
  <p>レビュー：<%= reviews.text %></p>
  <p>更新日：<%= reviews.updated_at.to_date%></p>

