<div class="user-background">
  <div class="user-content">
    <h2 class="center"><%= resource_name.to_s.humanize %>編集ページ</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="field">
        <%= f.label :user_name, "ユーザーネーム", class:"label" %><br />
        <%= f.text_field :user_name, autofocus: false, autocomplete: "user_name",placeholder: "Enter Username Here", class: "form_area" %>
      </div>
      <div class="field">
        <%= f.label :image, "ユーザーアイコン", class:"label" %><br />
        <%= f.file_field :image, autofocus: false, autocomplete: "image", class: "form_area" %>
      </div>
      <div class="field">
        <%= f.label :email, class:"label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email Address", class: "form_area" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label :password, class:"label" %> <i>(変更しない場合は空欄にしてください)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form_area" %>
        <% if @minimum_password_length %>
          <br />
          <em>半角英数<%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, "パスワード再確認", class:"label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_area" %>
      </div>
    
      <div class="field">
        <%= f.label :current_password, "現在のパスワード", class:"label" %> <i>(変更するには、現在のパスワードを入力してください)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Password", class: "form_area" %>
      </div>
    
      <div class="actions">
        <%= f.submit "変更する", class:"user-btn" %>
      </div>
    <% end %>
    
    <h3>ユーザー登録解除 <i class="far fa-arrow-alt-circle-down"></i></h3>
    
    <p><%= button_to "ユーザー登録解除", registration_path(resource_name), data: { confirm: "本当に解除しますか？" }, method: :delete, class:"user-btn" %></p>
    
    <%= link_to "Back", :back, data: {"turbolinks" => false} %>
  </div>
</div>